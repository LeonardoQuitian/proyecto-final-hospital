<h1>HOSPITAL BACKEND</h1>
<h2>LISTADO DE MEDICOS</h2>
<table>
    <thead>
        <tr>
            <th>fecha</th>
            <th>Nombre paciente</th>
            <th>Nombre medico</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each citas}}
        <tr>
            
            <td>{{formatearFecha fecha}}</td>
            <td>{{nombre}}</td>
            <td>{{nombres}}</td>
            <td>
                <a class="eliminar" href="/citas/eliminar/{{formatearFecha fecha}}">Eliminar</a>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<div class="opciones-tabla">
    <a class="volver" href="/">Volver</a>
    <a href="/citas/agregar-cita">Nueva cita</a>
</div>